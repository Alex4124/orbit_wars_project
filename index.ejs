<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
  <title>Orbit Wars</title>
  <link rel="icon" type="image/png" href="/favicon.png" />
  <style>
    :root{
      --bg-0:#0b0f1a; --bg-1:#0d1220;
      --accent:#5ef3b6; --accent2:#00d4ff;
      --text:#e8f0ff; --muted:#7e8aa5;
      --shadow:0 12px 40px rgba(0,0,0,.45);
    }
    *{box-sizing:border-box}
    html,body{height:100%;margin:0}
    body{
      background:
        radial-gradient(1200px 800px at 70% -10%, rgba(0,212,255,.10), transparent 60%),
        radial-gradient(900px 600px at -10% 120%, rgba(94,243,182,.08), transparent 60%),
        linear-gradient(180deg, var(--bg-0), var(--bg-1));
      color:var(--text);
      overflow:hidden;
      font:400 14px/1.3 system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    }
    #game{position:fixed; inset:0; display:grid; place-items:center;
      padding:max(env(safe-area-inset-top),16px) max(env(safe-area-inset-right),16px) max(env(safe-area-inset-bottom),24px) max(env(safe-area-inset-left),16px);
    }
    #game canvas{
      width:min(100vw - 32px, 800px);
      height:auto;
      max-height:calc(100vh - 160px);
      border-radius:18px;
      box-shadow:var(--shadow), 0 0 0 1px rgba(255,255,255,.06), 0 0 44px rgba(0,212,255,.12), inset 0 0 64px rgba(94,243,182,.08);
      background:#0a0f18;
    }
    .logo{
      position:fixed; top:max(env(safe-area-inset-top),16px); left:50%; transform:translateX(-50%);
      color:var(--muted); font-weight:800; font-size:12px; letter-spacing:.38em; text-transform:uppercase; opacity:.92;
      text-shadow:0 1px 0 rgba(0,0,0,.4); user-select:none; pointer-events:none;
    }
    .cta{
      position:fixed; left:50%; transform:translateX(-50%); bottom:max(env(safe-area-inset-bottom),24px);
      background:linear-gradient(135deg, var(--accent), var(--accent2)); color:#0c0f14; font-weight:700; font-size:16px; line-height:1;
      border:none; padding:14px 22px; border-radius:14px; box-shadow:0 10px 28px rgba(0,212,255,.25), 0 8px 20px rgba(94,243,182,.2);
      letter-spacing:.2px; display:none; cursor:pointer; transition:transform .15s ease, filter .15s ease, box-shadow .2s ease;
    }
    .cta:hover{transform:translateX(-50%) translateY(-1px); filter:brightness(1.05)}
    .cta:active{transform:translateX(-50%) translateY(1px); filter:brightness(.98)}
    @media (max-height:640px){ #game canvas{max-height:calc(100vh - 120px); border-radius:14px} }
  </style>
</head>
<body>
  <div id="game" aria-label="Game scene"></div>
  <div class="logo">ORBIT WARS</div>
  <button id="cta" class="cta" type="button" aria-label="Download">Download</button>
  <!-- bundle is injected by HtmlWebpackPlugin -->
</body>
</html>

